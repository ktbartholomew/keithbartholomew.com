{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "bracketSpacing": false,
        "trailingComma": "none"
      }
    ]
  },
  "extends": ["plugin:react/recommended", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
